        "/api/pharmacies/{pharmacy}/masks/{mask}": {
            "patch": {
                "summary": "Update mask stock",
                "operationId": "47b723c38519943a572347879e20065b",
                "parameters": [
                    {
                        "name": "pharmacy",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "mask",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "stock_delta": {
                                        "type": "integer",
                                        "example": 10
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "metadata": {
                                            "properties": {
                                                "status": {
                                                    "type": "string",
                                                    "example": "0000"
                                                },
                                                "message": {
                                                    "type": "string",
                                                    "example": "Success."
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Mask"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Mask not found in pharmacy",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "metadata": {
                                            "properties": {
                                                "status": {
                                                    "type": "string",
                                                    "example": "4041"
                                                },
                                                "message": {
                                                    "type": "string",
                                                    "example": "Mask id 20 not found in the specified pharmacy."
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "data": {
                                            "type": "object",
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Stock cannot be negative",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "metadata": {
                                            "properties": {
                                                "status": {
                                                    "type": "string",
                                                    "example": "4221"
                                                },
                                                "message": {
                                                    "type": "string",
                                                    "example": "Insufficient stock for the requested mask."
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "data": {
                                            "type": "object",
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
