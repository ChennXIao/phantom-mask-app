                    },
                    "name": {
                        "type": "string",
                        "example": "Mask"
                    },
                    "price": {
                        "type": "number",
                        "example": 100
                    },
                    "stock_quantity": {
                        "type": "integer",
                        "example": 30
                    }
                },
                "type": "object"
            },
            "Order": {
