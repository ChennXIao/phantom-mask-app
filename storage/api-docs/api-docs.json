    "paths": {
        "/api/orders/top-spenders": {
            "get": {
                "summary": "Get top spenders",
                "operationId": "bcfafa3c13761b7c9e08ee04c573633e",
                "parameters": [
                    {
                        "name": "start_date",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "end_date",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "metadata": {
                                            "properties": {
                                                "status": {
                                                    "type": "string",
                                                    "example": "0000"
                                                },
                                                "message": {
                                                    "type": "string",
                                                    "example": "Success."
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Timothy Schultz"
                                                    },
                                                    "total_spent": {
                                                        "type": "string",
                                                        "example": "170.56"
                                                    }
                                                }
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/orders": {
            "post": {
                "summary": "Create an order",
                "operationId": "445bab4f7dc9ea6fcd54f286c0209478",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "customer_id": {
                                        "type": "integer"
                                    },
                                    "items": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "mask_id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "pharmacy_id": {
                                                    "type": "integer",
                                                    "example": 2
                                                },
                                                "quantity": {
                                                    "type": "integer",
                                                    "example": 3
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "metadata": {
                                            "properties": {
                                                "status": {
                                                    "type": "string",
                                                    "example": "0000"
                                                },
                                                "message": {
                                                    "type": "string",
                                                    "example": "Success."
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Order"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Insufficient stock",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "metadata": {
                                            "properties": {
                                                "status": {
                                                    "type": "string",
                                                    "example": "4221"
                                                },
                                                "message": {
                                                    "type": "string",
                                                    "example": "Insufficient stock for mask ID 6"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "data": {
                                            "type": "object",
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/pharmacies": {
            "get": {
                "summary": "List pharmacies filter by day and time.",
                "operationId": "56e56d838fe317f6b5f16b11c045ea61",
                "parameters": [
                    {
                        "name": "day",
                        "in": "query",
                        "description": "Day of the week (e.g., Mon)",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "time",
                        "in": "query",
                        "description": "Time (e.g., 14:00:00)",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "metadata": {
                                            "properties": {
                                                "status": {
                                                    "type": "string",
                                                    "example": "0000"
                                                },
                                                "message": {
                                                    "type": "string",
                                                    "example": "Success."
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/PharmacyWithHour"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/pharmacies/{pharmacy}/masks": {
            "get": {
                "summary": "Get masks for a specific pharmacy",
                "operationId": "8144d2c4e39bf353b3a1e9d879696cca",
                "parameters": [
                    {
                        "name": "pharmacy",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "Sort by price or name",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "price",
                                "name"
                            ]
                        }
                    },
                    {
                        "name": "order",
                        "in": "query",
                        "description": "Sort direction: asc for ascending, desc for descending.",
                        "schema": {
                            "type": "string",
                            "enum": [
                                "asc",
                                "desc"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "metadata": {
                                            "properties": {
                                                "status": {
                                                    "type": "string",
                                                    "example": "0000"
                                                },
                                                "message": {
                                                    "type": "string",
                                                    "example": "Success."
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Mask"
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
