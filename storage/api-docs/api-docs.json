                    "id": {
                        "type": "integer"
                    },
                    "customer_id": {
                        "type": "integer"
                    },
                    "total_amount": {
                        "type": "number"
                    }
                },
                "type": "object"
            },
            "OrderDetail": {
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "order_id": {
                        "type": "integer"
                    },
                    "mask_id": {
                        "type": "integer"
                    },
                    "pharmacy_id": {
                        "type": "integer"
                    },
                    "quantity": {
                        "type": "integer"
                    },
                    "unit_price": {
                        "type": "number"
                    },
                    "total_price": {
                        "type": "number"
                    }
                },
                "type": "object"
            },
            "PharmacyWithHour": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Pharmacy"
                    },
                    "hours": {
                        "type": "array",
