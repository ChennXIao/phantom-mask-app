                "type": "object"
            },
            "PharmacyWithMask": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Pharmacy"
                    },
                    "masks": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Mask"
                        }
                    }
                },
                "type": "object"
            },
            "PharmacyHour": {
                "properties": {
                    "weekday": {
                        "type": "string",
                        "example": "Mon"
                    },
                    "open_time": {
                        "type": "string",
                        "example": "08:00:00"
                    },
                    "close_time": {
                        "type": "string",
                        "example": "20:00:00"
                    }
                },
                "type": "object"
            }
        }
    }
